@model IEnumerable<Krina_FlightProject.Models.KrinaBooking>

@{
    ViewData["Title"] = "CustomerBooking";
}

<h1>Your Bookings</h1>
<div>
    <a asp-controller="Flight" asp-action="FlightSearch">Back to Searching Flight</a>
</div>
<table class="table">
    <thead>
        <tr>
            
            <th>
                Customer Name
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Bookdate)
            </th> *@
            <th>
                Flight Name
            </th>
            <th>
                Source and Departure Time
            </th>
            <th>
                Destination and Arrival Time
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.NofPasseng)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
              
                <td>
                    @Html.DisplayFor(modelItem => item.CidNavigation.Fname) @Html.DisplayFor(modelItem => item.CidNavigation.Lname)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Bookdate)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.Flight.Flightname) 
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.Flight.Depart.City)  @Html.DisplayFor(modelItem => item.Flight.DepartTime) 
                </td>
                  <td>
                   @Html.DisplayFor(modelItem => item.Flight.Arrival.City)  @Html.DisplayFor(modelItem => item.Flight.ArrivalTime) 
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.NofPasseng)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td> *@
                <td>
                   
                    @Html.ActionLink("Details", "FlightDetails", new { id = item.Bid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Bid })
                </td>
            </tr>
        }
    </tbody>
</table>